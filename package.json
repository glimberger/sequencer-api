{
  "name": "sequencer-graphql-api",
  "version": "0.1.0",
  "license": "MIT",
  "scripts": {
    "start": "node src/index.ts",
    "start-dev": "DEBUG=api* nodemon --legacy-watch",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "build": "npm run build-ts && npm run tslint",
    "watch-ts": "tsc -w",
    "watch-node": "DEBUG=api* nodemon dist/index.js",
    "build-ts": "tsc",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "tslint-check": "tslint-config-prettier-check ./tslint.json",
    "test": "jest",
    "test-watch": "jest --watch"
  },
  "dependencies": {
    "apollo-server": "^2.25.3",
    "apollo-server-core": "^2.4.8",
    "apollo-server-express": "^2.4.8",
    "body-parser": "^1.18.3",
    "cookie-parser": "^1.4.4",
    "cors": "^2.8.5",
    "debug": "~2.6.9",
    "dotenv": "^8.0.0",
    "express": "~4.16.0",
    "graphql": "^14.2.1",
    "graphql-iso-date": "^3.6.1",
    "graphql-tools": "^4.0.4",
    "graphql-upload": "^8.0.6",
    "mongoose": "^5.5.12",
    "morgan": "^1.9.1",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@shelf/jest-mongodb": "^1.0.1",
    "@types/bson": "^4.0.0",
    "@types/cookie-parser": "^1.4.1",
    "@types/debug": "^4.1.3",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.16.1",
    "@types/graphql": "^14.2.0",
    "@types/graphql-iso-date": "^3.3.1",
    "@types/graphql-upload": "^8.0.0",
    "@types/jest": "^24.0.13",
    "@types/mongoose": "^5.5.3",
    "@types/morgan": "^1.7.35",
    "@types/node": "^12.0.4",
    "@types/uuid": "^3.4.4",
    "apollo-server-testing": "^2.4.8",
    "concurrently": "^4.1.0",
    "jest": "^24.8.0",
    "mockingoose": "^2.13.0",
    "nodemon": "^1.18.10",
    "prettier": "^1.16.4",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.2.0",
    "tslint": "^5.15.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.4.2"
  }
}
